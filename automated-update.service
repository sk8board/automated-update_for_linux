[Unit]
Description=utomated Update Service
Requires=network-online.target
After=network-online.target
StartLimitIntervalSec=5min
StartLimitBurst=4

[Service]
Type=oneshot
CPUQuota=50%
CPUWeight=20
IOWeight=20
Restart=on-failure
RestartSec=1min
ExecStart=/usr/lib/automated-update/automated-update.py
